<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_form_busca">

    <TextView
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/back"
        android:text="@string/cid_londres"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="29dp" />


    <View
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:layout_margin="20dp"
        android:background="@drawable/style_classificar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/classificar"
        android:text="@string/classificar"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="93dp" />

    <View
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:layout_margin="20dp"
        android:background="@drawable/style_classificar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/filter"
        android:text="@string/filtros"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qtd_pesquisa"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="154dp" />

    <View
        android:id="@+id/conteiner_menu"
        android:layout_width="337dp"
        android:layout_height="258dp"
        android:layout_margin="20dp"
        android:background="@drawable/view_pesquisa"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="227dp" />

    <ImageView
        android:id="@+id/img_um"
        android:layout_width="310dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_pesq_host"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="242dp"
        tools:ignore="MissingConstraints" />

    <TextView
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usuario_host"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="379dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_busca"
            android:textSize="12sp"
            android:text="Tela de busca"
            tools:ignore="MissingConstraints" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>